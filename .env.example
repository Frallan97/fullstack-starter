# Application Database
POSTGRES_USER=appuser
POSTGRES_PASSWORD=apppass
POSTGRES_DB=appdb

# Backend Configuration
# IMPORTANT: When using docker-compose, use service name 'db' instead of 'localhost'
DATABASE_URL=postgresql://appuser:apppass@db:5432/appdb?sslmode=disable
PORT=8080
ENVIRONMENT=development
DEBUG=true

# Frontend Configuration
VITE_API_URL=http://localhost:8080/api/v1
VITE_AUTH_SERVICE_URL=http://localhost:8081

# Google OAuth Configuration
# Get credentials from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Admin Configuration (optional, comma-separated emails)
ADMIN_EMAILS=admin@example.com
